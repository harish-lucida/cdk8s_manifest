pipeline {

    agent any

    environment {
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {

//         stage('Checkout'){
//            steps {
//                 git credentialsId: 'f87a34a8-0e09-45e7-b9cf-6dc68feac670',
//                 url: 'https://github.com/iam-veeramalla/cicd-end-to-end',
//                 branch: 'main'
//            }
//         }

        stage('Build Docker'){
            steps{
                script{
                    sh '''
                    echo 'Buid Docker Image'
                    docker build -t hari523/django-cicd:${BUILD_NUMBER} .
                    '''
                }
            }
        }

        stage('Push the artifacts'){
           steps{
                script{
                    sh '''
                    echo 'Push to Repo'
                    docker push hari523/django-cicd:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Checkout K8S manifest SCM'){
            steps {
                git credentialsId: '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',
                url: 'https://github.com/harish-lucida/cdk8s_manifest.git',
                branch: 'main'
            }
        }

        stage('Update K8S manifest & push to Repo'){
            steps {
                script{
                    withCredentials([usernamePassword(credentialsId: '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', passwordVariable: 'githari', usernameVariable: 'harish-lucida')]) {
                        sh '''
                        cat deployment.yaml
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
                        cat deployment.yml
                        git add deployment.yml
                        git commit -m 'Updated the deployment.yml | Jenkins Pipeline'
                        git remote -v
                        git push https://github.com/harish-lucida/cdk8s_manifest.git HEAD:main
                        '''
                    }
                }
            }
        }
    }
}